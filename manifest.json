{
    "manifest_version": 2,
    "name": "DuckDuckGo Chat AI Button",
    "short_name": "ddg-chat-ai-button",
    "author": "Jim Blake",
    "version": "1.0",
    "description": "Open Duck Duck Go Chat AI",
    "icons":{
        "16": "icons/ddg-icon-light.svg",
        "32": "icons/ddg-icon-light.svg"
    },

    "browser_action": {
        "default_popup": "popup/choose_page.html",
        "default_icon": "icons/ddg-icon-light.svg",
        "default_title": "Open DuckDuckGo Chat AI",
        "theme_icons": [
            {
                "light": "icons/ddg-icon-dark.svg",
                "dark": "icons/ddg-icon-light.svg",
                "size": 16
            },
            {
                "light": "icons/ddg-icon-dark.svg",
                "dark": "icons/ddg-icon-light.svg",
                "size": 32
            }
        ]
    }
}